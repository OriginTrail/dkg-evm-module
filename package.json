{
  "name": "dkg-evm-module",
  "description": "",
  "version": "3.2.0",
  "files": [
    "truffle-config.js",
    "/contracts/**/*.sol",
    "/build/contracts/*.json"
  ],
  "scripts": {
    "compile": "truffle compile",
    "contract-size": "truffle run contract-size --ignore-mocks",
    "contract-size:max": "truffle run contract-size --ignore-mocks --checkMaxSize",
    "coverage": "truffle run coverage",
    "deploy:devnet": "node scripts/deploy.js --environment otp_devnet",
    "deploy:mainnet": "node scripts/deploy.js --environment otp_mainnet",
    "deploy:mumbai": "truffle migrate --network mumbai --reset",
    "deploy:rinkeby": "truffle migrate --network rinkeby --reset",
    "deploy:testnet": "node scripts/deploy.js --environment otp_testnet",
    "deploy": "truffle migrate --network ganache --reset",
    "ganache": "ganache -e 1000000000000 -i 5777 -p 7545 -l 10000000 -a 30 -m \"aspect ask story desert profit engage tuition leave fade giraffe exclude brief\"",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sol": "solhint '{contracts,test}/**/*.sol' && prettier -c '{contracts,test}/**/*.sol'",
    "lint:sol:fix": "prettier --write '{contracts,test}/**/*.sol' --loglevel 'warn' && solhint '{contracts,test}/**/*.sol'",
    "prepare": "husky install",
    "start:whitelist:mainnet": "node scripts/whitelist.js --environment otp_mainnet",
    "test:no-compilation": "truffle test --compile-none",
    "test": "truffle test",
    "truffle_deploy:otp_devnet": "truffle migrate --network otp_devnet --reset",
    "truffle_deploy:otp_mainnet": "truffle migrate --network otp_mainnet --reset",
    "truffle_deploy:otp_testnet": "truffle migrate --network otp_testnet --reset"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OriginTrail/dkg-evm-module"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.16",
    "@polkadot/api": "^9.10.1",
    "@polkadot/keyring": "^10.2.1",
    "@truffle/hdwallet-provider": "^2.0.16",
    "assertion-tools": "^2.0.2",
    "chai": "^4.3.6",
    "coveralls": "^3.1.1",
    "dotenv": "^16.0.2",
    "eslint": "^8.29.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "eth-gas-reporter": "^0.2.25",
    "ethers": "^5.7.2",
    "ganache": "^7.4.4",
    "ganache-time-traveler": "^1.0.16",
    "husky": "^8.0.2",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "^1.0.0",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "truffle": "^5.6.0",
    "truffle-assertions": "^0.9.2",
    "truffle-contract-size": "^2.0.1",
    "web3": "^1.8.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.7.3",
    "@prb/math": "^2.5.0"
  }
}
